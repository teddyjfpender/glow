{
  "name": "glow",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint && cargo clippy --all-targets --all-features -- -D warnings",
    "lint:fix": "turbo lint:fix && cargo fmt --all",
    "typecheck": "turbo typecheck",
    "check": "turbo check",
    "test": "turbo test && cargo test --all-features --workspace",
    "test:e2e": "turbo test:e2e",
    "format": "bunx prettier --write . && cargo fmt --all",
    "format:check": "bunx prettier --check . && cargo fmt --all -- --check",
    "clean": "turbo clean && cargo clean",
    "prepare": "bunx lefthook install"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/js": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.14.0",
    "globals": "^17.0.0",
    "lefthook": "^1.10.10",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.3",
    "svelte-eslint-parser": "^1.4.1",
    "turbo": "^2.3.3",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.53.0"
  },
  "engines": {
    "bun": ">=1.1.0"
  },
  "trustedDependencies": [
    "lefthook"
  ],
  "dependencies": {
    "katex": "^0.16.27"
  }
}
